{
  "compilerOptions": {
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "Node16",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,
    "declaration": true,
    "outDir": "dist",

    "paths": {
      "@/*": ["./src/*"],
    },

    /* Bundler mode */
    "moduleResolution": "Node16",

    /* Linting */
    "skipLibCheck": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/index.ts"]
}